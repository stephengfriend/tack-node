{
	"name": "tack",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "concurrently -n next,jest \"next dev\" \"npm:test:watch\"",
		"build": "next build",
		"clean": "rimraf .next .cypress coverage out reports",
		"export": "next export",
		"format": "prettier --write .",
		"format:check": "prettier --list-different .",
		"lint": "npm run lint:check -- --fix",
		"lint:check": "eslint . --ext .js,.jsx,.ts,.tsx",
		"posttest": "concurrently \"type:*\" \"lint:*\" \"format:*\"",
		"preexport": "npm run build",
		"start": "next start",
		"test": "jest --coverage --verbose --colors",
		"test:watch": "jest --watch",
		"type:check": "tsc --noEmit"
	},
	"browserslist": [
		">0.3%",
		"not ie 11",
		"not dead",
		"not op_mini all"
	],
	"eslintConfig": {
		"root": true,
		"parser": "@typescript-eslint/parser",
		"parserOptions": {
			"ecmaFeatures": {
				"jsx": true
			},
			"ecmaVersion": 2018,
			"sourceType": "module"
		},
		"env": {
			"browser": true,
			"node": true
		},
		"extends": [
			"eslint:recommended",
			"plugin:@typescript-eslint/eslint-recommended",
			"plugin:@typescript-eslint/recommended",
			"plugin:react/recommended",
			"plugin:jsx-a11y/recommended",
			"prettier/@typescript-eslint",
			"plugin:prettier/recommended"
		],
		"globals": {
			"React": "writable"
		},
		"overrides": [
			{
				"files": [
					"*.js",
					".*.js"
				],
				"rules": {
					"@typescript-eslint/explicit-function-return-type": "off",
					"@typescript-eslint/no-var-requires": "off"
				}
			}
		],
		"rules": {
			"prettier/prettier": [
				"error",
				{},
				{
					"usePrettierrc": true
				}
			],
			"react/prop-types": "off",
			"react/react-in-jsx-scope": "off"
		},
		"settings": {
			"react": {
				"version": "detect"
			}
		}
	},
	"lint-staged": {
		"src/**/*.{ts,tsx}": "npm run lint:fix"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"jest": {
		"collectCoverageFrom": [
			"**/*.{js,jsx,ts,tsx}",
			"!**/*.d.ts",
			"!**/node_modules/**"
		],
		"setupFilesAfterEnv": [
			"<rootDir>/__tests__/jest.setup.js"
		],
		"moduleNameMapper": {
			"^.+\\.module\\.(css|sass|scss)$": "identity-obj-proxy"
		},
		"testPathIgnorePatterns": [
			"/.cypress/",
			"/.next/",
			"/build/",
			"/docs/",
			"/__e2e__/",
			"/node_modules/",
			"/out/",
			"/public/",
			"/styles/",
			"__tests__/jest.setup.js",
			"__tests__/jest.transform.js"
		],
		"transform": {
			"^.+\\.(js|jsx|ts|tsx)$": "babel-jest",
			"^.+\\.css$": "<rootDir>/__tests__/jest.transform.js"
		},
		"transformIgnorePatterns": [
			"/node_modules/",
			"^.+\\.module\\.(css|sass|scss)$"
		]
	},
	"prettier": {
		"semi": false,
		"trailingComma": "all",
		"singleQuote": true,
		"useTabs": true
	},
	"dependencies": {
		"@tailwindcss/ui": "^0.3.0",
		"cross-fetch": "^3.0.5",
		"faunadb": "^2.14.2",
		"next": "11.1.3",
		"react": "16.13.1",
		"react-dom": "16.13.1",
		"tailwindcss": "^1.4.6"
	},
	"devDependencies": {
		"@fullhuman/postcss-purgecss": "^2.3.0",
		"@testing-library/cypress": "^6.0.0",
		"@testing-library/jest-dom": "^5.10.1",
		"@testing-library/react": "^10.3.0",
		"@types/jest": "^26.0.0",
		"@types/node": "^14.0.13",
		"@types/react": "^16.9.38",
		"@types/testing-library__cypress": "^5.0.5",
		"@types/testing-library__react": "^10.0.1",
		"@typescript-eslint/eslint-plugin": "^3.3.0",
		"@typescript-eslint/parser": "^3.3.0",
		"babel-jest": "^26.0.1",
		"concurrently": "^5.2.0",
		"cypress": "^4.8.0",
		"eslint": "^7.3.0",
		"eslint-config-prettier": "^6.11.0",
		"eslint-plugin-jsx-a11y": "^6.3.1",
		"eslint-plugin-prettier": "^3.1.4",
		"eslint-plugin-react": "^7.20.0",
		"eslint-plugin-react-hooks": "^4.0.4",
		"husky": "^4.2.5",
		"jest": "^26.0.1",
		"lint-staged": "^10.2.11",
		"postcss-flexbugs-fixes": "^4.2.1",
		"postcss-preset-env": "^6.7.0",
		"prettier": "^2.0.5",
		"typescript": "^3.9.5",
		"ultra-runner": "^3.5.0",
		"vercel": "^19.1.1"
	}
}
