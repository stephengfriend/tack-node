{
	"ts-node": {
		"transpileOnly": true,
		"files": true,
		"compilerOptions": {
			"target": "es2017",
			"importHelpers": true,
			"module": "commonjs"
		}
	},
	"compilerOptions": {
		"allowJs": true,
		"alwaysStrict": true,
		"baseUrl": ".",
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"lib": ["dom", "dom.iterable", "es2018", "esnext"],
		"module": "esnext",
		"moduleResolution": "node",
		"noEmit": true,
		"noFallthroughCasesInSwitch": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"paths": {
			"@tack/*": ["lib/*"]
		},
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"target": "es2018",
		"incremental": true
	},
	"exclude": ["__e2e__", "node_modules"],
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"]
}
